<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserAddOrderActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxStrokeWidth="@dimen/_3sdp"
            app:boxStrokeWidthFocused="@dimen/_3sdp"
            app:boxCornerRadiusTopEnd="@dimen/_25sdp"
            app:boxCornerRadiusBottomStart="@dimen/_25sdp"
            android:layout_margin="@dimen/_10sdp"
            android:hint="هل السياره بسائق ام لا ؟">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_order_request_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:boxStrokeWidth="@dimen/_3sdp"
            app:boxStrokeWidthFocused="@dimen/_3sdp"
            app:boxCornerRadiusTopEnd="@dimen/_25sdp"
            app:boxCornerRadiusBottomStart="@dimen/_25sdp"
            android:hint="ادخل رقم هاتفك">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_order_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="phone" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:boxStrokeWidth="@dimen/_3sdp"
            app:boxStrokeWidthFocused="@dimen/_3sdp"
            app:boxCornerRadiusTopEnd="@dimen/_25sdp"
            app:boxCornerRadiusBottomStart="@dimen/_25sdp"
            android:hint="موقع الاستلام">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_order_first_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:boxStrokeWidth="@dimen/_3sdp"
            app:boxStrokeWidthFocused="@dimen/_3sdp"
            app:boxCornerRadiusTopEnd="@dimen/_25sdp"
            app:boxCornerRadiusBottomStart="@dimen/_25sdp"
            android:hint="موقع التسليم">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_order_last_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:boxStrokeWidth="@dimen/_3sdp"
            app:boxStrokeWidthFocused="@dimen/_3sdp"
            app:boxCornerRadiusTopEnd="@dimen/_25sdp"
            app:boxCornerRadiusBottomStart="@dimen/_25sdp"
            android:hint="مدة التاجير">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_order_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                app:textInputLayoutFocusedRectEnabled="true"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            app:boxStrokeWidth="@dimen/_3sdp"
            app:boxStrokeWidthFocused="@dimen/_3sdp"
            app:boxCornerRadiusTopEnd="@dimen/_25sdp"
            app:boxCornerRadiusBottomStart="@dimen/_25sdp"
            android:hint="اسم المستلم">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/add_order_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            app:icon="@drawable/ic_add"
            android:id="@+id/add_order_material_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:padding="@dimen/_10sdp"
            android:elevation="@dimen/_2sdp"
            android:shadowRadius="@integer/google_play_services_version"
            app:iconGravity="textStart"
            android:text="تقديم طلب"
            android:textAllCaps="false"
            app:cornerRadius="@dimen/_10sdp" />

    </LinearLayout>
</ScrollView>